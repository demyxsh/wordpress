#!/bin/bash
# Demyx
# https://demyx.sh
set -eEuo pipefail
#
#   Main.
#
demyx_entrypoint() {
    # Install WordPress
    demyx-install

    # Generate configs
    demyx-config

    # Sudo
    sudo -E demyx-sudo
}
#
#   Init.
#
demyx_entrypoint
#
#   Exec.
#
if [[ -n "$(pgrep php-fpm || true)" ]]; then
    pkill -USR2 php-fpm
else
    exec "$@"
fi
