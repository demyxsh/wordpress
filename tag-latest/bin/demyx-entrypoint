#!/bin/bash
# Demyx
# https://demyx.sh
set -euo pipefail

# Install WordPress
demyx-install

# Generate configs
demyx-config

# Run php-fpm in the foreground
case "$DEMYX_PHP" in
    8|8.0)
        DEMYX_PHP=8
    ;;
    8.1)
        DEMYX_PHP=81
    ;;
    *)
        DEMYX_PHP=8
    ;;
esac

php-fpm"$DEMYX_PHP" -F
